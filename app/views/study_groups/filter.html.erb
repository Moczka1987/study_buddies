<h1>Study Groups</h1>

<%= form_tag '/study_groups' do %>
    <%= collection_select :search, :id, @subjects, :id, :name%>
    <button type="submit" >filter</button>

<% end %>

<% @filtered_groups.each do |study_group|%>
<p><%= link_to study_group.name, study_group %></p>
<p><%= study_group.date %></p>
<p><%= study_group.location.name %></p>
<p><%= study_group.location.address %></p>
<p><%= study_group.description %></p>
<p><%= study_group.duration %></p>
<p><%= study_group.num_participants %></p>
<br>
<% end %><br>
<%= link_to "Profile", current_user %>